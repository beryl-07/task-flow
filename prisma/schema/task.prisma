model Task {
  id          String       @id @default(cuid())
  name        String
  description String?      @db.Text
  assignedTo  String
  startAt     DateTime
  endAt       DateTime
  status      TaskStatus   @default(TODO)
  priority    TaskPriority @default(MEDIUM)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@unique([name, assignedTo])
}

enum TaskStatus {
  TODO
  INPROGRESS
  COMPLETED
}

enum TaskPriority {
  HIGH
  LOW
  MEDIUM
}